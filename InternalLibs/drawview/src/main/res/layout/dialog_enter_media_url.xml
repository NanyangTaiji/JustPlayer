<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"

    android:paddingLeft="2dp"
    android:paddingRight="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:weightSum="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_file_selection"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="File"
            android:drawableTop="@drawable/icons8_file_submodule_48"
            android:layout_alignParentStart="true"
            />

        <Button
            android:id="@+id/dialog_uri_selection"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Media"
            android:drawableTop="@drawable/icons8_image_file_add_48"
            android:layout_alignParentEnd="true"
            />

        <Button
            android:id="@+id/dialog_media_selection"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:drawableTop="@drawable/icons8_camera_48"
            android:layout_alignParentEnd="true"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Online: " />

        <EditText
            android:id="@+id/dialog_url_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:hint="|"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/dialog_url_clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_menu_close_clear_cancel" />
    </LinearLayout>
</LinearLayout>