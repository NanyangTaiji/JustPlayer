<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.nanyang.richeditor.editor.NyRichEditor
        android:id="@+id/sample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <RadioGroup
        android:id="@+id/header_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="6">

        <RadioButton
            android:id="@+id/h1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:checked="false"
            android:enabled="true"
            android:text="H1" />

        <RadioButton
            android:id="@+id/h2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:checked="false"
            android:enabled="true"
            android:text="H2" />

        <RadioButton
            android:id="@+id/h3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:checked="false"
            android:enabled="true"
            android:text="H3" />

        <RadioButton
            android:id="@+id/h4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:checked="false"
            android:enabled="true"
            android:text="H4" />

        <RadioButton
            android:id="@+id/h5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:checked="false"
            android:enabled="true"
            android:text="H5" />

        <RadioButton
            android:id="@+id/h6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:checked="false"
            android:enabled="true"
            android:text="H6" />
    </RadioGroup>


    <RadioGroup
        android:id="@+id/font_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="7"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/f1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:checked="false"
            android:enabled="true"
            android:text="F1" />

        <RadioButton
            android:id="@+id/f2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:checked="false"
            android:enabled="true"
            android:text="F2" />

        <RadioButton
            android:id="@+id/f3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:checked="false"
            android:enabled="true"
            android:text="F3" />

        <RadioButton
            android:id="@+id/f4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:checked="false"
            android:enabled="true"
            android:text="F4" />

        <RadioButton
            android:id="@+id/f5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:checked="false"
            android:enabled="true"
            android:text="F5" />

        <RadioButton
            android:id="@+id/f6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:checked="false"
            android:enabled="true"
            android:text="F6" />

        <RadioButton
            android:id="@+id/f7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:checked="false"
            android:enabled="true"
            android:text="F7" />
    </RadioGroup>


</LinearLayout>
