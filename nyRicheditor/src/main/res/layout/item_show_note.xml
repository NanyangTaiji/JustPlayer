<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_rect"
    android:clickable="true"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="16dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/badge_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:maxLength="1"
        android:background="?attr/colorPrimary"
        android:textColor="@color/white"
        android:textSize="@dimen/medium_text" />

    <ImageView
        android:id="@+id/selected"
        android:layout_width="@dimen/badge_size"
        android:layout_height="@dimen/badge_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selected_bg"
        android:scaleType="center"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_checked" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="62dp"
        android:gravity="start"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:hint="@string/title"
                android:maxLines="1"
                android:textColor="@color/accent_pink"
                android:textColorHint="@color/secondary_text"
                android:textSize="@dimen/medium_text" />


            <ImageView
                android:id="@+id/locker"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_unlocked"
                app:tint="@color/orange"/>

            <ImageView
                android:id="@+id/star"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_thumb_up"
                app:tint="@android:color/holo_red_light" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:textColor="@color/main_text"
                android:textSize="@dimen/smaller_text" />

            <TextView
                android:id="@+id/keywords_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:maxLines="1"
                android:textColor="@color/hint_text"
                android:textSize="@dimen/smaller_text" />

            <TextView
                android:id="@+id/category_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:maxLines="1"
                android:textColor="?attr/colorPrimary"
                android:textSize="@dimen/smaller_text" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>