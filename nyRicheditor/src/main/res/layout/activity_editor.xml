<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="?attr/colorPrimary"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/nav_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="start|center_vertical"
            android:clickable="true"
            android:padding="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_app_icon" />

        <HorizontalScrollView
            android:id="@+id/hsv_action_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="start|center_vertical"
            android:background="?attr/colorPrimary"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_edit_toggle"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="start|center_vertical"
                    android:clickable="true"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_edit"
                    app:tint="@android:color/white" />

                <LinearLayout
                    android:id="@+id/action_bar_container"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_insert_text"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_add_richtext"
                        app:tint="@android:color/white" />

                    <ImageView
                        android:id="@+id/iv_action_open"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:src="@drawable/icons8_file_submodule_48"
                        app:tint="@android:color/white" />


                    <ImageView
                        android:id="@+id/iv_action_save"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_menu_save"
                        app:tint="@android:color/white" />

                    <ImageView
                        android:id="@+id/iv_action_undo"
                        android:layout_width="40dp"
                        android:layout_height="42dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_undo"
                        android:visibility="gone"
                        app:tint="@android:color/white" />
                </LinearLayout>

             <!--   <ImageView
                    android:id="@+id/iv_youtube"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end|center_vertical"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icons8_youtube_48"
                    app:tint="@android:color/white" />-->
            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/app_search"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="20dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_action_search" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/youtube_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="?attr/colorPrimary"
        android:visibility="gone"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start|center_vertical"
            android:clickable="true"
            android:padding="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_home_white_24dp"
            app:tint="@color/red" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/fabSaveList"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="30dp"
                android:clickable="true"
                android:contentDescription="@string/menu"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_menu_save"
                app:tint="@color/white"
                tools:ignore="MissingPrefix" />

            <ImageView
                android:id="@+id/fabCopy"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="40dp"
                android:clickable="true"
                android:contentDescription="@string/menu"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_content_copy_white_36dp"
                tools:ignore="MissingPrefix" />


            <ImageView
                android:id="@+id/fabPlay"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="40dp"
                android:clickable="true"
                android:contentDescription="@string/menu"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/rotate"
                app:tint="@color/white"
                tools:ignore="MissingPrefix" />


            <ImageView
                android:id="@+id/fabDownload"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="40dp"
                android:clickable="true"
                android:contentDescription="@string/menu"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_file_download_white_24dp"
                app:tint="@color/white"
                tools:ignore="MissingPrefix" />


        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_height"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bottom_action_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="?attr/colorPrimary"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_text_undo"
                    android:layout_width="40dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_undo"
                    app:tint="@android:color/white" />

                <ImageView
                    android:id="@+id/iv_text_redo"
                    android:layout_width="40dp"
                    android:layout_height="42dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_redo"
                    app:tint="@android:color/white" />

                <ImageView
                    android:id="@+id/iv_text_search"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_action_search"
                    app:tint="@android:color/white" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="start|center_vertical"
                android:background="?attr/colorPrimary"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <LinearLayout
                    android:id="@+id/richtext_bar_container"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_rectangle_white"

            android:gravity="center"
            android:orientation="horizontal">

            <com.nytaiji.nybase.view.ColorPaletteView
                android:id="@+id/cpv_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>

        <com.nanyang.richeditor.editor.EditorContainer
            android:id="@+id/mixed_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_height"
        android:background="@color/transparent_white"
        android:visibility="gone" />

</FrameLayout>
