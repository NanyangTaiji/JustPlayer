<resources>

    <style name="ActionImageView">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btn_colored_material</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:tint">@color/tintColor</item>
    </style>

    <!-- Base application theme. -->
    <style name="JsonViewTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="select_picture_dialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@color/pure_transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:buttonStyle">@style/select_picture_dialog_button_style</item>

    </style>

    <style name="select_picture_dialog_button_style">
        <item name="android:background">@drawable/dialog_button_bg_sl</item>
    </style>

    <!-- memento-->
    <declare-styleable name="Fab">
        <attr name="fabColor" format="reference" />
        <attr name="emptyIcon" format="reference" />
    </declare-styleable>

    <style name="MementoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fabColor">@drawable/fab</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="emptyIcon">@drawable/ic_empty_categories</item>
    </style>

    <style name="AppThemeRed" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
        <item name="colorAccent">@color/red</item>
        <item name="fabColor">@drawable/fab_red</item>
        <item name="emptyIcon">@drawable/empty_red</item>
    </style>

    <style name="AppThemePink" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/pink_dark</item>
        <item name="colorAccent">@color/pink</item>
        <item name="fabColor">@drawable/fab_pink</item>
        <item name="emptyIcon">@drawable/empty_pink</item>
    </style>

    <style name="AppThemePurple" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorAccent">@color/purple</item>
