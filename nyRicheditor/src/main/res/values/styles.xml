    <style name="AppThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/blue</item>
        <item name="fabColor">@drawable/fab_blue</item>
        <item name="emptyIcon">@drawable/empty_blue</item>
    </style>

    <style name="AppThemeCyan" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryDark">@color/cyan_dark</item>
        <item name="colorAccent">@color/cyan</item>
        <item name="fabColor">@drawable/fab_cyan</item>
        <item name="emptyIcon">@drawable/empty_cyan</item>
    </style>

    <style name="AppThemeTeal" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/teal_dark</item>
        <item name="colorAccent">@color/teal</item>
        <item name="fabColor">@drawable/fab_teal</item>
