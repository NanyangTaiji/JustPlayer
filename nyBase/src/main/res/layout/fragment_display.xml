<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_transparent"
    android:fitsSystemWindows="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="true"
        app:layout_behavior="com.nytaiji.nybase.view.nyBottomSheetBehavior"
        app:layout_constraintTop_toTopOf="parent">

        <!-- the above must be complete path-->

        <com.nytaiji.nybase.view.NyWebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/control_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSilver"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/web_view">

            <!-- CONTROLS -->
            <LinearLayout
                android:id="@+id/detail_control_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/detail_control_padding">

                <TextView
                    android:id="@+id/controls_playlist"
                    android:layout_width="@dimen/detail_control_width"
                    android:layout_height="@dimen/detail_control_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="Add to Playlist"
                    android:drawableTop="@drawable/ic_playlist_add"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingVertical="@dimen/detail_control_padding"
                    android:text="Add to Playlist"
                    android:textSize="@dimen/detail_control_text_size" />

                <TextView
                    android:id="@+id/play_with_caster"
                    android:layout_width="@dimen/detail_control_width"
                    android:layout_height="@dimen/detail_control_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="Chromecasteing"
                    android:drawableTop="@drawable/ic_cast"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingVertical="@dimen/detail_control_padding"
                    android:text="ChromeCasting"
                    android:textSize="@dimen/detail_control_text_size" />


                <TextView
                    android:id="@+id/controls_popup"
                    android:layout_width="@dimen/detail_control_width"
                    android:layout_height="@dimen/detail_control_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="Pop up"
                    android:drawableTop="@drawable/ic_picture_in_picture"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingVertical="@dimen/detail_control_padding"
                    android:text="Pop up"
                    android:textSize="@dimen/detail_control_text_size" />

                <TextView
                    android:id="@+id/controls_download"
                    android:layout_width="@dimen/detail_control_width"
                    android:layout_height="@dimen/detail_control_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="Download"
                    android:drawableTop="@drawable/ic_file_download"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingVertical="@dimen/detail_control_padding"
                    android:text="Download"
                    android:textSize="@dimen/detail_control_text_size" />

            </LinearLayout>

            <!-- SECONDARY CONTROLS -->
            <LinearLayout
                android:id="@+id/detail_secondary_control_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/detail_control_padding"
                android:paddingBottom="@dimen/detail_control_padding"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/controls_share"
                    android:layout_width="@dimen/detail_control_width"
                    android:layout_height="@dimen/detail_control_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="Share"
                    android:drawableTop="@drawable/ic_share_black"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingVertical="@dimen/detail_control_padding"
                    android:text="Share"
                    android:textSize="@dimen/detail_control_text_size" />

                <TextView
                    android:id="@+id/controls_browser"
                    android:layout_width="@dimen/detail_control_width"
                    android:layout_height="@dimen/detail_control_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="Open in Browser"
                    android:drawableTop="@drawable/ic_language"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingVertical="@dimen/detail_control_padding"
                    android:text="Open in Browser"
                    android:textSize="@dimen/detail_control_text_size" />


                <TextView
                    android:id="@+id/controls_audio"
                    android:layout_width="@dimen/detail_control_width"
                    android:layout_height="@dimen/detail_control_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="Play Audio"
                    android:drawableTop="@drawable/ic_headset"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingVertical="@dimen/detail_control_padding"
                    android:text="Play Audio"
                    android:textSize="@dimen/detail_control_text_size" />


                <TextView
                    android:id="@+id/controls_infor"
                    android:layout_width="@dimen/detail_control_width"
                    android:layout_height="@dimen/detail_control_height"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="Information"
                    android:drawableTop="@drawable/ic_bug_report"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingVertical="@dimen/detail_control_padding"
                    android:text="Information"
                    android:textSize="@dimen/detail_control_text_size" />

            </LinearLayout>

        </LinearLayout>


        <ListView
            android:id="@+id/list_sub"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorSilver"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/main_player_layout"
            app:layout_constraintTop_toBottomOf="@+id/control_panel" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mini_player_layout"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:background="@color/semiTransparentWhite"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/mini_thumb"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ny" />

            <TextView
                android:id="@+id/mini_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:focusable="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/mini_thumb"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mini_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:text="NYTaiji"
                android:textColor="@color/dark_blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.mediarouter.app.MediaRouteButton
                android:id="@+id/mini_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="5dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/mini_prev" />

            <ImageView
                android:id="@+id/mini_prev"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/mini_play"
                app:srcCompat="@drawable/exo_controls_previous"
                app:tint="@android:color/black" />

            <ImageView
                android:id="@+id/mini_play"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/mini_next"
                app:srcCompat="@drawable/ic_pause"
                app:tint="@android:color/black" />

            <ImageView
                android:id="@+id/mini_next"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/mini_end"
                app:srcCompat="@drawable/exo_controls_next"
                app:tint="@android:color/black" />

            <ImageView
                android:id="@+id/mini_end"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_close"
                app:tint="@android:color/holo_red_dark" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_player_layout"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:background="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/main_thumb"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/banner" />

            <TextView
                android:id="@+id/main_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:focusable="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/main_thumb"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/main_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:text="NYTaiji"
                android:textColor="@color/darker_blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nyplayer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="8dp"
                android:text="AdvancedWebview"
                android:textColor="@color/colorSilver"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/main_thumb"
                app:layout_constraintStart_toEndOf="@+id/main_info"
                app:layout_constraintTop_toBottomOf="@+id/main_title" />


            <androidx.mediarouter.app.MediaRouteButton
                android:id="@+id/main_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="5dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/main_thumb" />


            <ImageView
                android:id="@+id/main_shuffle"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:scaleType="fitXY"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/main_prev"
                app:srcCompat="@drawable/exo_controls_shuffle_on"
                app:tint="@android:color/black" />

            <ImageView
                android:id="@+id/main_prev"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/main_play"
                app:srcCompat="@drawable/exo_controls_previous"
                app:tint="@android:color/black" />

            <ImageView
                android:id="@+id/main_play"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/main_next"
                app:srcCompat="@drawable/ic_pause"
                app:tint="@android:color/black" />

            <ImageView
                android:id="@+id/main_next"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/main_end"
                app:srcCompat="@drawable/exo_controls_next"
                app:tint="@android:color/black" />

            <ImageView
                android:id="@+id/main_end"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_close"
                app:tint="@android:color/holo_red_dark" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
